<html lang="en">
  <head>
    <title>Weather App</title>
    <meta charset="utf-8" />
    <style>
      body {background-color: rgb(246, 246, 63);}
      h1   {color: rgb(51, 57, 17);}
      h2   {color: rgb(51, 57, 17);}
      p    {color: rgb(104, 38, 226);}
      </style>
  </head>
<body>
<h1></h1>
<div class="container">
        <h1 style="text-align:center">Get Temperature</h1>
        <form action="/" method="post">
          <h3>Enter multiple cities using ,</h3>
            <input name="cities" type="text" class="city" placeholder="Please Enter A City">
            <br>
            <input type="submit" class="submit-button" value="Get Temperature"><br>
        </form>
          
        <% if (city_data) {%>
          <p>Here are the results</p>
          <h2><%= city_data %></h2>
        <%} %>
</div>
</body>
</html>